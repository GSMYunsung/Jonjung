<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.pss.jonjung.view.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_boardWriteFragment"
            app:destination="@id/boardWriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/boardWriteFragment"
        android:name="com.pss.jonjung.view.BoardWriteFragment"
        android:label="BoardWriteFragment" >
        <action
            android:id="@+id/action_boardWriteFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>